---
interface Props {
  username: string;
  role: string;
  description: string;
  github: string;
  picture: string;
}

const { username, role, description, github, picture } = Astro.props;
---

<li class="maker-card">
  <a href="{github}"
    <img src="{picture}" alt={username} />
    <h2>
      {username}
    </h2>
    <h4>
      {role}
    </h4>
    <p>
      {description}
    </p>
  </a>
</li>
